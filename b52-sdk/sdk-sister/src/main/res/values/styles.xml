<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="ResourceName">

    <style name="sister_FullScreenAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="sister_CircleImageView" parent="WrapWrap">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="sister_DialogWindow">
        <item name="android:windowEnterAnimation">@anim/sister_window_in</item>
        <item name="android:windowExitAnimation">@anim/sister_window_out</item>
    </style>

    <style name="sister_MsgStatusFailed">
        <item name="android:layout_width">@dimen/size_16dp</item>
        <item name="android:layout_height">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/size_2dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="sister_MsgStatusProcessing">
        <item name="android:layout_width">@dimen/size_16dp</item>
        <item name="android:layout_height">@dimen/size_16dp</item>
        <item name="android:layout_marginEnd">@dimen/size_2dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/sister_msg_processing</item>
        <item name="android:indeterminateDuration">1500</item>
        <item name="android:progressTint">@android:color/transparent</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="sister_FullScreenDialog" parent="AlertDialog.AppCompat">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
